<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/aavartan_page"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.technocracy.app.aavartan.activity.MainActivity"
    tools:showIn="@layout/app_bar_main">
    <android.support.v7.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ulka"
        android:id="@+id/ulka"
        android:layout_marginTop="34dp"
        android:layout_marginLeft="98dp"
        android:layout_marginStart="98dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/revolve"
        android:src="@drawable/revolve"
        android:layout_marginBottom="37dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/ulka"
        android:layout_alignEnd="@+id/ulka" />

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rocket"
        android:id="@+id/rocket"
        android:layout_above="@+id/revolve"
        android:layout_toStartOf="@+id/planet"
        android:layout_marginBottom="18dp"
        android:layout_toLeftOf="@+id/planet" />

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/planet"
        android:src="@drawable/planet"
        android:layout_marginBottom="47dp"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:layout_alignBottom="@+id/revolve"
        android:layout_alignLeft="@+id/revolve"
        android:layout_alignStart="@+id/revolve" />

</RelativeLayout>
