<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/leaderboard_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:foreground="?android:attr/selectableItemBackground">
    <!--android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"-->


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@color/colorBlack90Translucent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/eventsImage"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_gravity="top|bottom|center_vertical|center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:foregroundGravity="center_vertical"
            android:scaleType="fitXY"
            android:src="@drawable/ic_logo_small"
            android:tint="@color/white" />

        <TextView
            android:id="@+id/ListHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/eventsImage"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/eventsImage"
            android:text="Large"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/ListTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/ListHead"
            android:layout_alignRight="@+id/ListHead"
            android:layout_below="@+id/ListHead"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/eventsImage"
            android:text="Medium"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/ListVenue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/ListHead"
            android:layout_alignRight="@+id/ListHead"
            android:layout_below="@+id/ListTime"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/eventsImage"
            android:text="Medium"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white" />
    </RelativeLayout>
</android.support.v7.widget.CardView>